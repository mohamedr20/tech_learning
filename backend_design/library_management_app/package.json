{
  "name": "library_management_app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start:docker": "npm run build && nodemon --legacy-watch",
    "build": "rimraf ./dist && tsc --incremental",
    "docker:build": "NODE_ENV=dev docker-compose --env-file ./.env up --build",
    "docker:migrate": "docker-compose exec api npx knex migrate:latest --knexfile=knexfile.ts --verbose",
    "docker:seed": "docker-compose exec api npx knex seed:run --knexfile=knexfile.ts --verbose",
    "docker:build:db": "npm run docker:migrate && npm run docker:seed",
    "docker:test": "docker-compose exec api npx jest",
    "docker:shutdown": "docker-compose down --remove-orphans",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "migrate": "knex migrate:latest --knexfile=knexfile.ts --verbose",
    "migrate:make": "knex migrate:make --knexfile=knexfile.ts",
    "rollback": "knex migrate:rollback --knexfile=knexfile.ts",
    "make:seed": "knex seed:make --knexfile=knexfile.ts",
    "seed": "knex seed:run --knexfile=knexfile.ts --verbose"
  },
  "keywords": [],
  "author": "Mohamed Isse",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.13.2",
    "express": "^4.18.1",
    "express-winston": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.2.3",
    "typescript": "^4.6.4",
    "uuid": "^8.3.2",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.2.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^27.5.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8"
  }
}
